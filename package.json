{
  "name": "webpack-start-template",
  "version": "1.0.0",
  "description": "webpack start template",
  "private": true,
  "author": "Sedov A.I <aleks.sedov@mail.ru>",
  "license": "ISC",
  "scripts": {
    "start": "cross-env env-cmd -f .env.development webpack serve --mode=development --open",
    "build": "cross-env env-cmd -f .env.production webpack --mode=production",
    "gen": "plop",
    "tsc": "tsc --noEmit",
    "lint": "eslint --ext .ts src --fix",
    "stylelint": "stylelint **/*.scss --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "autoprefixer": "10.4.2",
    "babel-loader": "8.2.3",
    "babel-plugin-module-resolver": "4.1.0",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "10.2.2",
    "core-js": "3.20.3",
    "cross-env": "7.0.3",
    "css-loader": "6.5.1",
    "env-cmd": "10.1.0",
    "eslint": "8.7.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-webpack-plugin": "3.1.1",
    "html-webpack-plugin": "5.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.2",
    "node-sass": "7.0.1",
    "plop": "3.0.5",
    "postcss-loader": "6.2.1",
    "prettier": "2.5.1",
    "sass-loader": "12.4.0",
    "style-loader": "3.3.1",
    "stylelint": "14.3.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "3.0.0",
    "typescript": "^4.5.5",
    "webpack": "5.67.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.3"
  },
  "dependencies": {
    "normalize.css": "8.0.1"
  }
}
